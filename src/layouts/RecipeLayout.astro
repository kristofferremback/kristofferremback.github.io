---
import BaseLayout from './BaseLayout.astro';
import PortionCalculator from '../components/PortionCalculator.astro';

interface Ingredient {
	name: string;
	amount: number;
	unit: string;
}

interface Macros {
	calories: number;
	protein: number;
	carbs: number;
	fat: number;
}

interface Props {
	id: string;
	title: string;
	description: string;
	prepTime?: string;
	cookTime?: string;
	servings: number;
	macros: Macros;
	ingredients: Ingredient[];
	tags: string[];
}

const { id, title, description, prepTime, cookTime, servings, macros, ingredients, tags } = Astro.props;
---

<BaseLayout title={`${title} â€” Recipes`} description={description}>
	<article>
		<header class="mb-10 pb-8 border-b border-stone-200 dark:border-stone-800" transition:name={`recipe-${id}`}>
			<h1 class="text-4xl font-bold tracking-tight">{title}</h1>
			<p class="mt-3 text-lg text-stone-600 dark:text-stone-300">{description}</p>

			<div class="mt-5 flex flex-wrap items-center gap-x-6 gap-y-3">
				{prepTime && (
					<div class="flex items-center gap-1.5 text-sm text-stone-600 dark:text-stone-400">
						<svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>
						<span>{prepTime} prep</span>
					</div>
				)}
				{cookTime && (
					<div class="flex items-center gap-1.5 text-sm text-stone-600 dark:text-stone-400">
						<svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0 1 12 21 8.25 8.25 0 0 1 6.038 7.047 8.287 8.287 0 0 0 9 9.601a8.983 8.983 0 0 1 3.361-6.867 8.21 8.21 0 0 0 3 2.48Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 0 0 .495-7.468 5.99 5.99 0 0 0-1.925 3.547 5.975 5.975 0 0 1-2.133-1.001A3.75 3.75 0 0 0 12 18Z" /></svg>
						<span>{cookTime} cook</span>
					</div>
				)}
				{tags.length > 0 && (
					<div class="flex gap-2">
						{tags.map((tag) => (
							<a
								href={`/tags/${tag}`}
								class="text-xs px-2 py-0.5 rounded-full bg-stone-200 text-stone-600 hover:bg-stone-300 dark:bg-stone-800 dark:text-stone-400 dark:hover:bg-stone-700 transition-colors"
							>
								{tag}
							</a>
						))}
					</div>
				)}
			</div>
		</header>

		<section class="mb-12 animate-in" style="animation-delay: 100ms">
			<PortionCalculator servings={servings} ingredients={ingredients} macros={macros} />
		</section>

		<div class="prose dark:prose-invert max-w-none animate-in" style="animation-delay: 200ms">
			<slot />
		</div>
		<footer class="mt-12 pt-6 border-t border-stone-200 dark:border-stone-800 text-sm text-stone-500 dark:text-stone-400">
			<a href={`/ai/recipes/${id}`} class="hover:text-stone-900 dark:hover:text-stone-100 transition-colors">
				View as Markdown
			</a>
		</footer>
	</article>
</BaseLayout>
