---
import { Code } from 'astro:components';

interface Props {
	content: string;
	lang?: string;
	wrap?: boolean;
}

const { content, lang = 'markdown', wrap = true } = Astro.props;
---

<div class="not-prose raw-file-wrapper" data-wrap={wrap ? '' : undefined}>
	<Code code={content} lang={lang} themes={{ light: 'github-light', dark: 'github-dark' }} />
	<button class="code-copy-btn" aria-label="Copy code" type="button">
		<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
			<rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
			<path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
		</svg>
	</button>
</div>

<style>
	.raw-file-wrapper {
		position: relative;
	}
</style>
